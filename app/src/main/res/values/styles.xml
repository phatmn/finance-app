<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="H3" parent="TextAppearance.MaterialComponents.Headline3">
    </style>

    <style name="H4" parent="TextAppearance.MaterialComponents.Headline4">
    </style>

    <style name="H5" parent="TextAppearance.MaterialComponents.Headline5">
    </style>

    <style name="body" parent="TextAppearance.MaterialComponents.Body1">
    </style>

    <style name="body2" parent="TextAppearance.MaterialComponents.Body2">
    </style>

    <style name="category" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
